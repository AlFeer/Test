@model List<Slider>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <div>
                <a asp-controller="dashboard" asp-action="index" class="btn btn-primary">Go Back</a>
                <a asp-controller="slider" asp-action="create" class="btn btn-success">Create</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Subtitle
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/uploads/images/@slider.ImageUrl" alt="image" />
                                </td>
                                <td>
                                    @slider.Title
                                </td>
                                <td>
                                    @slider.Subtitle
                                </td>
                                <td>
                                    <a asp-controller="slider" asp-action="index" class="btn btn-primary">Details</a>
                                    <a asp-controller="slider" asp-action="update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                                    <a asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>